<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/center_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background_color">
    
    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_bottom">
        
     </RelativeLayout>
   
    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_main_index"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/main_tab_bus_near_btn_selector"
                android:background="@color/base_white_color"
                android:onClick="onTabSelect"
                android:paddingBottom="2dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:text="@string/main_tab_index"
                android:textColor="@drawable/main_tab_text_color_selector"
                android:textSize="12sp" />
            
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_bus_near"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/main_tab_bus_near_btn_selector"
                android:background="@color/base_white_color"
                android:onClick="onTabSelect"
                android:paddingBottom="2dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:text="@string/main_tab_bus_near"
                android:textColor="@drawable/main_tab_text_color_selector"
                android:textSize="12sp" />
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_remind"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/main_tab_remind_btn_selector"
                android:background="@color/base_white_color"
                android:onClick="onTabSelect"
                android:paddingBottom="2dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:text="@string/main_tab_remind"
                android:textColor="@drawable/main_tab_text_color_selector"
                android:textSize="12sp" />

        </RelativeLayout>
      
        <Button
            android:id="@+id/btn_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_tab_setting_btn_selector"
            android:background="@color/base_white_color"
            android:onClick="onTabSelect"
            android:paddingBottom="2dip"
            android:paddingTop="7dip"
            android:scaleType="matrix"
            android:text="@string/main_tab_setting"
            android:textColor="@drawable/main_tab_text_color_selector"
            android:textSize="12sp" />
        
    </LinearLayout>
    
</RelativeLayout>