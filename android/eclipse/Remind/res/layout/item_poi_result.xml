<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:background="@drawable/item_common_bg_selector">

    <ImageView
        android:id="@+id/iv_postion_icon"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/pos_search" 
        android:padding="5dp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
    	android:layout_marginBottom="10dip" 
        android:layout_toRightOf="@+id/iv_postion_icon"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/tv_position_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textSize="15sp"/>
  
        <TextView
            android:id="@+id/tv_position_address"
            android:layout_below="@+id/tv_position_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_postion_select_arrow"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_search_up_retrieval" />
    
</RelativeLayout>
