<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    style="@style/ActionBar"
    android:background="@color/base_white_color"
    android:baselineAligned="false"
    android:focusable="true"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/btn_back_selector" />

    <com.remind.widget.ClearEditText
	     android:id="@+id/et_search"
	     android:layout_weight="1"
	     android:layout_width="0dp"
	     android:layout_height="@dimen/base_search_action_bar_height"
	     android:layout_marginLeft="5dp"
	     android:layout_marginRight="5dp"
	     android:background="@drawable/base_edit_input"
	     android:drawableLeft="@drawable/icon_msg_search"
	     android:drawablePadding="10dp"
	     android:hint="@string/pos_search_hint"
	     android:paddingLeft="10dp"
	     android:paddingRight="10dp"
	     android:singleLine="true"
	     android:textSize="15sp" />
 
    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/action_bar_btn_search" />
    
</LinearLayout>