<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/page_top_padding"
    android:paddingLeft="@dimen/page_left_padding"
    android:paddingRight="@dimen/page_right_padding"
    android:paddingTop="@dimen/page_top_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wdsunday.ui.home.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/home_search_icon_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/home_search_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/search" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/home_search_icon"
                android:layout_alignTop="@id/home_search_icon"
                android:paddingBottom="@dimen/home_search_icon_padding"
                android:paddingTop="@dimen/home_search_icon_padding"
                android:src="@mipmap/search_icon" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/search_action_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"

            android:visibility="visible">

            <EditText
                android:id="@+id/linenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="输入公交番号" />

            <ImageView
                android:id="@+id/search_text_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/delete"
                android:layout_marginRight="15dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/home_search_btn_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:visibility="visible"
                android:layout_gravity="center"
                android:background="@drawable/search_textview"
                />


        </LinearLayout>

    </LinearLayout>



    <!--<com.wdsunday.utils.wight.LoadingView-->
        <!--android:id="@+id/loadView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"/>-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v7.widget.RecyclerView>






</LinearLayout>
